<?xml version="1.0"?>
<ruleset name="MyBB 2.0 Settings">
	<description>Configuration for MyBB 2.0 Settings package</description>

	<file>src</file>

	<rule ref="MyBB2/MyBB2"/>

	<rule ref="Generic.Files.LineLength">
		<exclude-pattern>*/resources/*</exclude-pattern>
	</rule>

	<rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
		<exclude-pattern>*/src/database/*</exclude-pattern>
		<exclude-pattern>*/src/config/*</exclude-pattern>
	</rule>

	<rule ref="MyBB2.Naming.AbstractClassConvention">
		<exclude-pattern>*/src/Store.php</exclude-pattern>
	</rule>

</ruleset>
